<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.Proveedores.AgregarProveedores"
             Title="Agregar Proveedores">
    <ContentPage.Resources>
        <!-- Estilo para Label -->
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Estilo para Entry (equivalente a TextBox) -->
        <Style TargetType="Entry">
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="BackgroundColor" Value="#1A4D43"/>
            <Setter Property="TextColor" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Estilo para Button -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Border Padding="20" BackgroundColor="#0F3C3C">
            <VerticalStackLayout>
                <Label Text="Agregar Nuevo Proveedor"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#D2B48C"
                   Margin="0,0,0,20"/>

                <Grid ColumnDefinitions="*,10,*"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                    <!-- Fila 0 -->
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                        <Label Text="Nombre de la Empresa *" TextColor="#D2B48C"/>
                        <Entry Placeholder="Nombre del proveedor" BackgroundColor="#0B2F2F" Text="{Binding EmpresaNombre}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Row="0" Grid.Column="2">
                        <Label Text="RFC *" TextColor="#D2B48C"/>
                        <Entry Placeholder="RFC del proveedor" BackgroundColor="#0B2F2F" Text="{Binding RFC}" />
                    </VerticalStackLayout>

                    <!-- Fila 1 -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                        <Label Text="Nombre de Contacto" TextColor="#D2B48C"/>
                        <Entry Placeholder="Nombre del contacto" BackgroundColor="#0B2F2F" Text="{Binding NombreContacto}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Row="1" Grid.Column="2">
                        <Label Text="Email" TextColor="#D2B48C"/>
                        <Entry Placeholder="correo@ejemplo.com" BackgroundColor="#0B2F2F" Text="{Binding Email}" Keyboard="Email" />
                    </VerticalStackLayout>

                    <!-- Fila 2 -->
                    <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                        <Label Text="Teléfono" TextColor="#D2B48C"/>
                        <Entry Placeholder="555-1234-567" BackgroundColor="#0B2F2F" Text="{Binding Telefono}" Keyboard="Telephone" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Row="2" Grid.Column="2">
                        <Label Text="Categoría" TextColor="#D2B48C"/>
                        <Entry Placeholder="Ej: Electrónica, Papelería" BackgroundColor="#0B2F2F" Text="{Binding Categoria}" />
                    </VerticalStackLayout>

                    <!-- Fila 3 -->
                    <VerticalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
                        <Label Text="Dirección" TextColor="#D2B48C"/>
                        <Entry Placeholder="Dirección completa" BackgroundColor="#0B2F2F" Text="{Binding Direccion}" />
                    </VerticalStackLayout>

                    <!-- Fila 4 -->
                    <VerticalStackLayout Grid.Row="4" Grid.Column="0">
                        <Label Text="Calificación (1-5)" TextColor="#D2B48C"/>
                        <Entry Placeholder="5" BackgroundColor="#0B2F2F" Text="{Binding Calificacion}" Keyboard="Numeric"/>
                    </VerticalStackLayout>
                </Grid>

                <HorizontalStackLayout HorizontalOptions="End" Margin="0,20,0,0">
                    <Button Text="Cancelar"
                        BackgroundColor="#D2B48C"
                        TextColor="Black"
                        WidthRequest="120"
                        Command="{Binding CancelarCommand}"/>
                    <Button Text="Guardar"
                        BackgroundColor="#D2B48C"
                        TextColor="Black"
                        WidthRequest="140"
                        Command="{Binding GuardarCommand}"/>
                    <Button Text="Regresar"
                            BackgroundColor="#D2B48C"
                            TextColor="Black"
                            WidthRequest="140"
                            Command="{Binding RegresarCommand}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>